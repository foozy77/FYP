<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/job_cust_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/ic_pp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/job_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.00 pm to 4.00 pm"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/job_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setapak"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/job_custName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/job_serName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/job_serPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="how Much"
                    android:textSize="18dp" />

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/view_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/app_details"
                    android:src="@drawable/ic_arrow_right" />

            </LinearLayout>-->
        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>