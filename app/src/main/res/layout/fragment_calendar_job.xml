<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarJobFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:fillViewport="true"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="Appointment Details"
                        android:textSize="22dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <!--MAP HERE-->
                <TableRow
                    android:background="#e1f5fe"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="13dp">

                    <!--<com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:enabled="true"
                    android:clickable="true"
                    android:padding="15dp"
                    android:apiKey="0BYX7MFyg8lWRKFxzwG-D93VMxZP6wH5eObwEtw"
                    android:gravity="center" />-->
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="Appointment Date"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <EditText
                        android:id="@+id/cj_appDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:text="date"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="Appointment Time"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <EditText
                        android:id="@+id/cj_seTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:text="time"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="Appointment Location"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <EditText
                        android:id="@+id/cj_loc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:text="location"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Customer Name"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <EditText
                        android:id="@+id/cj_cust"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:text="name"
                        android:textSize="20dp" />
                </TableRow>


                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Service Chosen"
                        android:textSize="20dp"

                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <EditText
                        android:id="@+id/cj_serChose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:text="service"
                        android:textSize="20dp" />
                </TableRow>


                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Service Duration"

                        android:textSize="20dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <EditText
                        android:id="@+id/cj_serDuration"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:text="minutes"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Additional Request"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:background="#e1f5fe"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <EditText
                        android:id="@+id/cj_appRequest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:text="side note"
                        android:textSize="20dp" />
                </TableRow>

                <!--PICTURE HERE-->

                <TableRow
                    android:gravity="center"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnDeleteApp"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/buttonstyle"
                            android:text="Remove" />

                        <Button
                            android:id="@+id/btnRescheduleApp"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/buttonstyle"
                            android:text="Reschedule" />
                    </LinearLayout>
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>